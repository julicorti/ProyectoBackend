      <input name="price" type="number" id="inputData" placeholder="Precio" />
       </div>
       <div class="sector">
      <h3>Ingrese el thumbnail</h3>
      <input name="thumbnail" type="file" />
      <h3>Ingrese el stock</h3>
      <input name="stock" type="number" id="inputData" placeholder="Stock" />
      <h3>Available</h3>
      <input name="available" type="checkbox" checked />
      <h3>Ingrese la categoria</h3>
      <input
        name="category"
        type="text"
        id="inputData"
        placeholder="Categoria"
      />
      </div>
  </div>
      <br /><button id="btn-agregar">Agregar Producto</button>
