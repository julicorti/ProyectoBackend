  {{/if}}

  <div class="contenedorForm">
    
    <form id="formulario" >

      <h2>Agregar un producto</h2>


    <div class="sectores">
      <div class="sector">

     
      <h3>Ingrese el titulo</h3>
      <input name="title" type="text" id="inputData" placeholder="Titulo" />
      <h3>Ingrese la descripci√≥n</h3>
      <input
        name="description"
        type="text"
        id="inputData"
        placeholder="Descripcion"
      />
